FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      dynamicMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dynamicFvMesh      dynamicMotionSolverFvMesh;

motionSolverLibs ("libsixDoFRigidBodyMotion.so");

solver            sixDoFRigidBodyMotion;

sixDoFRigidBodyMotionCoeffs
{
   patches         (VAWT1);//cellZone         (innerAMI);
   patches         (VAWT2);
   patches         (VAWT3);
   patches         (SHAFT);
   innerDistance   0.5;
   outerDistance   0.7;

    rho             rhoInf;
    rhoInf          1.225;


    mass        2.43573e-05;

    momentOfInertia (5.471714306e-07 5.471714306e-07 0.000000729);
    centreOfMass (0 0 0);

    orientation
    (
        1 0 0
        0 1 0
        0 0 1
    );
    
    velocity        (0 0 0);
    acceleration    (0 0 0);

    angularMomentum (0 0 0);

    torque          (0 0 0);

    report          on;

    solver
    {
        type Newmark;
    }

    constraints
    {
        zAxis
        {
            sixDoFRigidBodyMotionConstraint axis;
            axis (0 0 1);
        }

        fixedPt
        {
            sixDoFRigidBodyMotionConstraint point;
            centreOfRotation (0 0 0);
        }
    }

    
    restraints
    {
        //- Some dumping functions
        /*translationDamper
        {
                //- Nms/rad
                //  Acts against motion as friction
                sixDoFRigidBodyMotionRestraint  sphericalAngularDamper;
                coeff 0.05;
        }
        */
    }
}



